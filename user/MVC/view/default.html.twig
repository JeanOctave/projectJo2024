<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf8" />
    <title> JO2024 </title>
    <!-- css -->
    <link rel="stylesheet" href="front/css/bootstrap.min.css">
    <link rel="stylesheet" href="front/css/style.css"/>
  </head>

  {% block body %}{% endblock %}

  <div id="video" style="position: fixed; z-index: -99; width: 100%; height: 100%">
		<iframe frameborder="0" 
			src="https://youtube.com/embed/NEdt23nJUhw?autoplay=1&loop=1&controls=0&showinfo=0&autohide=1&mute=1&playlist=NEdt23nJUhw">
		</iframe>
	</div>
    <!--- Nav -->
    <nav class="navbar navbar-default" role="navigation" id="nav1">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>    
      </div>
      <div class="navbar-collapse collapse">
        <div id="alignElementNav">
          <ul class="nav navbar-nav navbar-center">
            <li><a href="#">Home</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Events <b class="caret"></b></a>
              <ul class="dropdown-menu dropdown-menu-centered" id="nav1">
                <li><a href="#">Activities</a></li>
                <li><a href="#">Games</a></li>
              </ul>
            </li>
          <li><a href="#">Contact</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <button class="btn btn-primary" type="button" id="btnSign1" data-toggle="modal" data-target="#modalSignIn">
              Sign In
            </button>
          </li>
          <li>
            <button class="btn btn-primary" type="submit"  id="btnSign2" data-toggle="modal" data-target="#modalSignUp">Sign Up</button>
          </li>
        </ul>
      </div>
      </div>
    </nav>

    <!-- Modal Sign Up -->
    <div class="modal fade" id="modalSignUp" role="dialog">
        <div class="modal-dialog modal-register">
          <!-- Modal content-->
            <div class="modal-body">
              <div class="main-login main-center form-w3-agile">
              <div>
                <h1><center>Sign Up</center></h1>
              </div>
              <form class="form-horizontal form-register" method="post" action="#">
                <div class="form-group">
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                      <input type="text" class="form-control" name="name" id="name" placeholder="First name ..."/>
                    </div>
                  </div>
                </div>
    
                <div class="form-group">
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                      <input type="text" class="form-control" name="last" id="email" placeholder="Last name ..."/>
                    </div>
                  </div>
                </div>
    
                <div class="form-group">
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                      <input type="text" class="form-control" name="username" id="username" placeholder="Email ..."/>
                    </div>
                  </div>
                </div>

                <div class="side-by-side clearfix">
                  <div>
                    <select data-placeholder="Choose a Country..." class="chosen-select" tabindex="2">
                      <option value=""></option>
                      <option value="United States">United States</option>
                      <option value="United Kingdom">United Kingdom</option>
                      <option value="Afghanistan">Afghanistan</option>
                      <option value="Aland Islands">Aland Islands</option>
                    </select>
                  </div>
                </div>
                  
                <div class="form-group">
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                      <input type="password" class="form-control" name="password" id="password" placeholder="Password ..."/>
                    </div>
                  </div>
                </div>
    
                <div class="form-group">
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                      <input type="password" class="form-control" name="repeatPass" id="repeatPass" placeholder="Repeat password ..."/>
                    </div>
                  </div>
                </div>
                <div class="btn-submit">
                  <div class="form-group ">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign Up</button>
                  </div>
                  
                  <div class="form-group ">
                    <button type="reset" class="btn btn-primary btn-lg btn-block">Cancel</button>
                  </div>
                </div>
              </form>
            </div>
            </div>
        </div>
      </div>
    <!--///////////////////////-->

    <!-- Modal Sign In -->
    <div class="modal fade" id="modalSignIn" role="dialog">
      <div class="modal-dialog modal-register">
        <!-- Modal content-->
          <div class="modal-body">
            <div class="main-login main-center form-w3-agile">
            <div>
              <h1><center>Sign In</center></h1>
            </div>
            <form class="form-horizontal form-register">
              <div class="form-group">
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Your Email"/>
                  </div>
                </div>
              </div>
  
              <div class="form-group">
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" name="last" id="email" placeholder="Your password"/>
                  </div>
                </div>
              </div>

              <div class="btn-submit">
                <div class="form-group ">
                  <button type="submit" class="btn btn-primary btn-lg btn-block">Sign Up</button>
                </div>
                
                <div class="form-group ">
                  <button type="reset" class="btn btn-primary btn-lg btn-block">Cancel</button>
                </div>
              </div>
            </form>
          </div>
          </div>
      </div>
    </div>
  <!--///////////////////////-->

    <!-- Content -->
    {% block content %}{% endblock %}

    <!-- Footer -->
    
    <!-- js -->
      <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="front/js/myJs.js" type="text/javascript"></script>
    {% if myMessage is not empty %}
    <script>
    $(function() {                       // On DOM ready
      $('#login-modal').modal('show');     // Show the modal
    });
    </script>
    {% endif %}
  </body>
</html>



