           <td><img src="{{ aCountries.link }}" alt="" class="img-responsive" width="100" height="100"></td>
           <td>
                <input name="countries" type="hidden" value="{{ aCountries.theCountries }}" id="countries{{ aCountries.theCountries }}"/>
